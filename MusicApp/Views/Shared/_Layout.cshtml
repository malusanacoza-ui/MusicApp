<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MusicApp</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-dark spotify-nav">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">🎵 MusicApp</a>
            <a class="nav-link" asp-controller="Music" asp-action="Index">Music</a>
        </div>
    </nav>

    <!-- SIDEBAR -->
    <div class="sidebar">
        <a asp-controller="Home" asp-action="Index">🏠 Home</a>
        <a asp-controller="Music" asp-action="Index">🎧 Browse</a>
        <a href="#">❤️ Liked Songs</a>
    </div>

    <!-- MAIN CONTENT -->
    <main class="main-content">
        @RenderBody()
    </main>

    <!-- PLAYER -->
    <div class="player-bar">
        <div class="player-left">
            <img id="playerCover" src="/images/wave.jpg" />
            <div>
                <div id="playerTitle">Select a song</div>
                <div class="player-artist">Unknown Artist</div>
            </div>
        </div>

        <audio id="globalPlayer" controls></audio>
    </div>

    <script>
        function playSong(src, title) {
            const player = document.getElementById("globalPlayer");
            document.getElementById("playerTitle").innerText = title;
            player.src = src;
            player.play();
        }
    </script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
